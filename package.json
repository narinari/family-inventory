{
  "name": "family-inventory",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "dev:bot": "turbo dev --filter=bot",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:rules": "vitest run --config vitest.rules.config.ts",
    "test:rules:watch": "vitest --config vitest.rules.config.ts",
    "e2e": "pnpm --filter e2e test",
    "e2e:ui": "pnpm --filter e2e test:ui",
    "e2e:headed": "pnpm --filter e2e test:headed",
    "e2e:debug": "pnpm --filter e2e test:debug",
    "emulators": "firebase emulators:start --project demo-family-inventory --only auth,firestore",
    "seed": "turbo seed --filter=api",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "firebase": "^11.1.0",
    "firebase-tools": "^15.1.0",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
